{
  "name": "zuru",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "",
  "homepage_url": "https://github.com/nju33/chrome-zuru",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19!inactive.png",
    "default_title": "zuru"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}